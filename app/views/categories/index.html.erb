<h2>Categoroies (<%= @categories.length %>)</h2>

<ol>
    <% @categories.each do |category| %>
      <li>
        <%= link_to category_products_path(category) do %>
          <%= category.title %>
          (<%= category.products_count %>)
          <% end %>
          
      </li>
    <% end %>
  </ol>